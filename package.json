{
  "name": "rcg-tool",
  "version": "0.1.4",
  "main": "./lib/index.js",
  "bin": {
    "rcg": "./lib/index.js"
  },
  "license": "MIT",
  "files": [
    "lib/**/*"
  ],
  "repository": {
    "url": "https://github.com/mkinfrared/react-component-generator.git"
  },
  "scripts": {
    "start": "node lib/index.js",
    "build": "ttsc && yarn copy",
    "copy": "ts-node copyStaticAssets.ts",
    "watch": "nodemon --exec lib/index.js",
    "build:watch": "ttsc -w",
    "prepare": "husky install",
    "release": "standard-version && git commit -m"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/shelljs": "^0.8.8",
    "@types/yargs": "^16.0.1",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-no-async-without-await": "^1.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "shelljs": "^0.8.4",
    "standard-version": "^9.1.1",
    "ts-node": "^9.1.1",
    "ttypescript": "^1.5.12",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
